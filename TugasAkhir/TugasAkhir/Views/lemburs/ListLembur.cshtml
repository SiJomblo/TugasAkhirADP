@model IEnumerable<TugasAkhir.Models.lembur>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}
<form id="asu" action="">
    <div class="table table-responsive" style="padding-top:5px !important;">
        <table class="table table-striped table-condensed hover" id="a">
            <thead>
                <tr>
                    <th>
                        NIK
                    </th>
                    <th>
                        NAME
                    </th>
                    <th>
                        DATE
                    </th>
                    <th>
                        START HOUR
                    </th>
                    <th>
                        END HOUR
                    </th>
                    <th>
                        TOTAL HOURS
                    </th>
                    <th>
                        REWARD
                    </th>
                    <th>
                        TOTAL REWARD
                    </th>
                    <th>
                        STATUS
                    </th>
                    <th class="text-center" style="padding-left:20px;">
                        <input type="checkbox" id="select_all">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nama)
                    </td>
                    <td>
                        @String.Format("{0:dd MMM yyyy}", item.tanggal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.jam_mulai)<font size="2rem"> WIB</font>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.jam_selesai)<font size="2rem"> WIB</font>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total_jam)<font size="2rem"> WIB</font>
                    </td>
                    <td>
                        Rp. @String.Format("{0:n}", item.reward)
                    </td>
                    <td>
                        Rp. @String.Format("{0:n}", item.totalreward)
                    </td>
                    <td>
                        @if (item.status == "Pending")
                        {
                            <span class="label label-warning">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                        else
                        {
                            <span class="label label-success">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                    </td>
                    <td class="text-center">
                        <input type="checkbox" name="check" class="check" value="@Html.DisplayFor(modelItem => item.id_lembur)">
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th class="text-center">
                        <a onclick="EditStatusLembur()" class="btn btn-primary" title="Lanjut Ke Process"><span class="fa fa-check-circle fa-1x"></span>  Ok</a>
                        <a onclick="DeleteLembur()" title="Delete" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</form>