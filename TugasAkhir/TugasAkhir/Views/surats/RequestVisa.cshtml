@model IEnumerable<TugasAkhir.Models.surat>

@{

    ViewBag.Title = "Request Visa";
    Layout = null;
}
<div class="table table-responsive" style="padding-top:5px !important;">
    <table class="table table-striped table-condensed hover" id="a">
        <thead>
            <tr>
                <th>
                    NIK
                </th>
                <th>
                    NAME
                </th>
                <th>
                    DATE
                </th>
                <th>
                    PASSPORT NUMBER
                </th>
                <th>
                    LEAVE DATE
                </th>
                <th>
                    RETURN DATE
                </th>
                <th>
                    DESTINATION
                </th>
                <th>
                    STATUS
                </th>
                <th>
                    OPTIONS
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nama)
                    </td>
                    <td>
                        @String.Format("{0:dd MMMM yyyy}", item.tanggal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detail_surat.no_passport)
                    </td>
                    <td>
                        @String.Format("{0:dd MMMM yyyy}", item.detail_surat.tgl_pergi)
                    </td>
                    <td>
                        @String.Format("{0:dd MMMM yyyy}", item.detail_surat.tgl_pulang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detail_surat.tujuan)
                    </td>
                    <td>
                        @if (item.status == "Request")
                        {
                            <span class="label label-info">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                        else if (item.status == "Process")
                        {
                            <span class="label label-warning">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                        else
                        {
                            <span class="label label-success">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                    </td>
                    <td>
                        <a onclick="EditStatus('@Url.Action("EditStatusVisa", "surats", new { id=item.id_surat})')" class="btn btn-primary" id="btn-proses" title="Lanjut Ke Process"><span class="fa fa-check-circle fa-1x"></span>  Ok</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>