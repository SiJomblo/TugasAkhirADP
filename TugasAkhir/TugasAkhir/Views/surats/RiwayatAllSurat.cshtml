@model IEnumerable<TugasAkhir.Models.surat>

@{
    ViewBag.Title = "RiwayatAll";
    Layout = null;
}
<div class="table table-responsive" style="padding-top:5px !important;">
    <table class="table table-striped table-condensed hover" id="c">
        <thead>
            <tr>
                <th>
                    TYPE OF LETTER
                </th>
                <th>
                    DATE
                </th>
                <th>
                    ANNOTATION
                </th>
                <th>
                    STATUS
                </th>
                <th>
                    PROGRESS
                </th>
                <th>
                    OPTIONS
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.jenis_surat.jenis_surat1)
                </td>
                <td>
                    @String.Format("{0:dd MMMM yyyy}", item.tanggal)
                </td>
                <td>
                    <span class="label label-success">@Html.DisplayFor(modelItem => item.keterangan)</span>
                </td>
                <td>
                    <span class="label label-success">@Html.DisplayFor(modelItem => item.status)</span>
                </td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar"
                             aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
                            100% Finish
                        </div>
                    </div>
                </td>
                <td>
                    @if (item.id_jenis != 2)
                    {
                        <a onclick="DetailSurat('@Url.Action("Details", "surats", new { id=item.id_surat})')" title="Details"><i class="glyphicon glyphicon-eye-open"></i></a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>