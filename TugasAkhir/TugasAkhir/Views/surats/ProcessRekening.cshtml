@model IEnumerable<TugasAkhir.Models.surat>

@{
    ViewBag.Title = "Process Rekening";
    Layout = null;
}
<div class="table table-responsive" style="padding-top:5px !important;">
    <table class="table table-striped table-condensed hover" id="c">
        <thead>
            <tr>
                <th>
                    NIK
                </th>
                <th>
                    NAME
                </th>
                <th>
                    DATE
                </th>
                <th>
                    BANK NAME
                </th>
                <th>
                    REQUIREMENT
                </th>
                <th>
                    STATUS
                </th>
                <th>
                    OPTIONS
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.nama)
                    </td>
                    <td>
                        @String.Format("{0:dd MMMM yyyy}", item.tanggal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detail_surat.nama_bank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detail_surat.keperluan)
                    </td>
                    <td>
                        @if (item.status == "Request")
                        {
                            <span class="label label-info">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                        else if (item.status == "Process")
                        {
                            <span class="label label-warning">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                        else
                        {
                            <span class="label label-success">@Html.DisplayFor(modelItem => item.status)</span>
                        }
                    </td>
                    <td>
                        <a onclick="EditSuratA('@Url.Action("EditSuratA", "surats", new { id=item.id_surat})')" class="btn btn-success" id="btn-selesai" title="Lanjut Ke Finish"><span class="fa fa-check-circle fa-1x"></span>  Finish</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>