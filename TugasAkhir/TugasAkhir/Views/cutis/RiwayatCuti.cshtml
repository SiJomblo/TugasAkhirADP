@model IEnumerable<TugasAkhir.Models.cuti>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}
<div class="table table-responsive" style="padding-top:5px !important;">
    <table class="table table-striped table-condensed hover" id="a">
        <thead>
            <tr>
                <th>
                    NIK
                </th>
                <th>
                    NAME
                </th>
                <th>
                    SUBMISSION DATE
                </th>
                <th>
                    START DATE
                </th>
                <th>
                    END DATE
                </th>
                <th>
                    ANNOTATION
                </th>
                @if (Session["jabatan"].ToString() != "k")
                {
                    <th>
                        BY
                    </th>
                }
                <th>
                    OPTIONS
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user.nip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.nama)
                </td>
                <td>
                    @String.Format("{0:dd MMMM yyyy}", item.tanggal)
                </td>
                <td>
                    @String.Format("{0:dd MMMM yyyy}", item.durasi_awal)
                </td>
                <td>
                    @String.Format("{0:dd MMMM yyyy}", item.durasi_akhir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.keterangan)
                </td>
                @if (Session["jabatan"].ToString() != "k")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.oleh)
                    </td>
                }
                <td>
                    <a onclick="DetailCuti('@Url.Action("Details", "cutis", new { id = item.id_cuti })')" title="Details"><i class="glyphicon glyphicon-eye-open"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>