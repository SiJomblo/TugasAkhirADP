@model TugasAkhir.Models.slipgaji
@{
    ViewBag.Title = "Edit";
    Layout = null;
}


@using (Html.BeginForm("NewRequestK", "slipgajis", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return ajaxrequestgaji(this);", data_restUrl = Url.Action("NewRequestK", "slipgajis", new { id = 0 }) }))
{
    <div class="row">
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                @Html.HiddenFor(model => model.id_slip)
                <div class="form-group">
                    @Html.Label("Tanggal", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBox("Tanggal", String.Format("{0:dd MMMM yyyy}", DateTime.Now), htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.durasi_awal, "Tanggal Awal", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.durasi_awal, new { htmlAttributes = new { @class = "form-control", Type = "Month", @required = "required" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.durasi_akhir, "Tanggal Akhir", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.durasi_akhir, new { htmlAttributes = new { @class = "form-control", Type = "Month", @required = "required" } })
                    </div>
                </div>
            </div>
            <hr style="border:1px solid #eaeaea" />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9" style="padding-left:25px;">
                    <button type="submit" class="btn btn-success"><span class="fa fa-save"></span> Submit</button>
                    <button type="reset" class="btn btn-danger"><span class="fa fa-trash-alt"></span> Clear</button>
                </div>
            </div>
        </div>
    </div>
}
